<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); %>

<body>

  <%- include('layouts/navbar'); %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/posts/search" method="POST">
          <div class="control-group">
            <div class="input-group">
              <!-- Want to have this input save inputs later -->
              <input type="text" class="form-control" placeholder="Search Blog Post" id="search" name="search" style="height: 3.3em;">
              <span class="input-group-btn">
                <button type="search" class="btn btn-primary">Search</button>
              </span>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for (var i = 0; i < blogposts.length; i++) { %> 
          <div class="post-preview"> 
            <a href="/post/<%= blogposts[i]._id %> ">
              <h2 class="post-title"> <%= blogposts[i].title %> </h2> 
              <h3 class="post-subtitle"> <%= blogposts[i].body %> </h3> 
            </a> 
            <p class="post-meta">Posted by 
              <a href="#"> <%= blogposts[i].username %> </a>
              on <%= blogposts[i].datePosted.toDateString() %>
            </p> 
        </div> 
        <hr> 
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('layouts/footer'); -%>

  <%- include('layouts/scripts'); -%>

</body>

</html>
